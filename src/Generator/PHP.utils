function _sonnex_is_vowel($char) {
  static $VOWELS = array(
  'a', 'â', 'à', 'ä', 'e', 'é', 'è', 'ê', 'ë', 'i', 'î', 'ï', 'o', 'ô',
  'ö', 'u', 'ù', 'û', 'ü', 'y', 'œ'
  );

  return in_array($char, $VOWELS);
}

function _sonnex_is_conson($char) {
  static $CONSONS = array(
  'b', 'c', 'ç', 'd', 'f', 'g', 'h', 'j', 'k', 'l', 'm', 'n', 'p', 'q',
  'r', 's', 't', 'v', 'w', 'x', 'y', 'z'
  );

  return in_array($char, $CONSONS);
}
